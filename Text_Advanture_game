#Giving format to SPE and ROOMS in order for player to choose with 1,2,3
FROST = '1'
FIRE= '2'
ARCANE = '3'

BLUE = '1'
RED = '2'
PURPLE = '3'

#Giving format to my spells
S1 = 'You cast a spell'
S2 = 'You cast a defensive spell' 
S3 = 'Immune yourself against damage'

#Giving format to my spells
F1 = 'Frost bolt'
F2 = 'Iceblock'
F3 = 'Silence' 

FF1 = 'Fireball'
FF2 = 'Dragonbreath'
FF3 = 'Blink'

A1 = 'Energy blast'
A2 = 'Sheep your enemy'
A3 = 'Silence'

#Giving format to my opponents 
M1 = '𝗚𝗜𝗔𝗡𝗧 𝗪𝗛𝗜𝗧𝗘 𝗕𝗘𝗔𝗥'
M2 = '𝗠𝗔𝗚𝗠𝗔 𝗗𝗘𝗠𝗢𝗡'
M3 = '𝗗𝗥𝗔𝗚𝗢𝗡'

